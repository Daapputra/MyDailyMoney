<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_screen"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Laporan Keuangan"
                app:titleTextColor="@color/text_primary"
                app:navigationIcon="@drawable/ic_arrow_back"/>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Fixed Section (Filter Only) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Filter Waktu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvFilterWaktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bulan Ini â–¾"
                    android:textColor="@color/green_primary"
                    android:background="@drawable/bg_filter_default"
                    android:backgroundTint="#FFFFFF"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14sp"
                    android:elevation="6dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Scrollable Section -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- Comparison Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="1dp"
                    app:strokeColor="#FFFFFF"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical"
                        android:weightSum="2">

                        <!-- Left Side: Data -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.85"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTotalBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 0"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="14sp"
                                app:autoSizeMaxTextSize="22sp"
                                android:maxLines="1"
                                android:fontFamily="sans-serif-black"
                                android:textSize="22sp"
                                android:textColor="#212121"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Selisih (Sisa Saldo)"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="#757575"
                                android:layout_marginBottom="28dp"/>

                            <!-- Income Legend -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="16dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="2dp">
                                    <View
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:background="@drawable/bg_circle_green"
                                        android:backgroundTint="#4CAF50"
                                        android:layout_marginEnd="6dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pemasukan"
                                        android:fontFamily="sans-serif-medium"
                                        android:textColor="#4CAF50"
                                        android:textSize="12sp"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvLegendIncome"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp 0"
                                    android:fontFamily="sans-serif-bold"
                                    android:textColor="#212121"
                                    android:textSize="14sp"
                                    android:layout_marginStart="14dp"/>
                            </LinearLayout>

                            <!-- Expense Legend -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="2dp">
                                    <View
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:background="@drawable/bg_circle_red"
                                        android:backgroundTint="#EF5350"
                                        android:layout_marginEnd="6dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pengeluaran"
                                        android:fontFamily="sans-serif-medium"
                                        android:textColor="#EF5350"
                                        android:textSize="12sp"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvLegendExpense"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp 0"
                                    android:fontFamily="sans-serif-bold"
                                    android:textColor="#212121"
                                    android:textSize="14sp"
                                    android:layout_marginStart="14dp"/>
                            </LinearLayout>

                        </LinearLayout>

                        <!-- Right Side: Pie Chart -->
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pieChart"
                            android:layout_width="0dp"
                            android:layout_height="220dp"
                            android:layout_weight="1.15" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- TOGGLE BUTTONS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnToggleExpense"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Pengeluaran"
                        android:textAllCaps="false"
                        app:backgroundTint="#FA3939"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="24dp"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnToggleIncome"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Pemasukan"
                        android:textAllCaps="false"
                        app:backgroundTint="#E0E0E0" 
                        android:textColor="#E0E0E0"
                        app:cornerRadius="24dp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- ANALYSIS CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAnalysis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:id="@+id/tvAnalysisTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Analisis Pengeluaran"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/tvAnalysisPeriod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="#2E7D32"
                                android:background="@drawable/bg_filter_default" 
                                android:backgroundTint="#F5F7FA"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"/>
                        </RelativeLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/pieChartExpense"
                                android:layout_width="match_parent"
                                android:layout_height="280dp"/>

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/pieChartIncome"
                                android:layout_width="match_parent"
                                android:layout_height="280dp"
                                android:visibility="gone"/>
                        </FrameLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- TOP CATEGORIES LISTS -->
                <LinearLayout
                    android:id="@+id/layoutExpenseList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Top Kategori Pengeluaran"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="12dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTopExpenseCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:paddingBottom="24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutIncomeList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Top Kategori Pemasukan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="12dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTopIncomeCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:paddingBottom="24dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>