<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_card_white">

    <LinearLayout
        android:id="@+id/rowContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="14dp"
        android:paddingHorizontal="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <!-- Column 1: Transaction Info (Icon + Name + Date) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:src="@drawable/ic_cat_makanan"
                app:tint="@color/green_primary"
                android:padding="8dp"
                android:background="@drawable/bg_circle_green"
                android:backgroundTint="#E8F5E9"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="SATE REMBIGE"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-black"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#757575"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="05 Des 2015"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Column 2: Category -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <!-- Removed redundant small icon to match user request of "synchronizing icons" 
                 which implies the main icon should be the category icon -->

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Makanan"
                android:textSize="14sp"
                android:textColor="#424242"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Column 3: Amount -->
        <TextView
            android:id="@+id/tvNominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp 1.175.000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/text_primary"
            android:gravity="end"/>

    </LinearLayout>
    
    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginHorizontal="16dp"/>

</LinearLayout>