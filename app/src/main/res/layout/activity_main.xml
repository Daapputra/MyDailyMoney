<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_layout">

    <!-- Header Background (Fixed visually behind) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_header_pattern" />

    <!-- Main Vertical Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- FIXED SECTION: Header & Saldo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- Header Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_title"
                        android:fontFamily="sans-serif-black"
                        android:textSize="28sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelola keuanganmu dengan mudah"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/green_soft"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnHeaderHistory"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_history" 
                    app:tint="#FFFFFF"
                    android:alpha="0.9"
                    android:contentDescription="History"/>
            </LinearLayout>

            <!-- Saldo Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                android:translationZ="4dp"
                android:layout_marginBottom="16dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_gradient_3d"
                    android:padding="24dp">

                    <!-- Top Row: Label and Menu -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Saldo"
                            android:textColor="#E8F5E9"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/btnToggleSaldo"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_visibility"
                            app:tint="#E8F5E9"
                            android:layout_marginStart="8dp"
                            android:alpha="0.8"
                            android:contentDescription="Toggle Saldo"/>
                        
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_more_horiz" 
                            app:tint="#FFFFFF"
                            android:alpha="0.8"
                            android:contentDescription="More Options"/>
                    </LinearLayout>
                    
                    <!-- Balance Amount -->
                    <ViewFlipper
                        android:id="@+id/vfSaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="32dp"
                        android:inAnimation="@anim/slide_in_up"
                        android:outAnimation="@anim/slide_out_up">

                        <TextView
                            android:id="@+id/tvSaldo1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 2.548.000"
                            android:textColor="#FFFFFF"
                            android:textSize="36sp"
                            android:fontFamily="sans-serif-black"/>

                        <TextView
                            android:id="@+id/tvSaldo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp *****"
                            android:textColor="#FFFFFF"
                            android:textSize="36sp"
                            android:fontFamily="sans-serif-black"/>
                    </ViewFlipper>

                    <!-- Income & Expense Summary in Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Income (Left) -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="start">
                            
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">
                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_arrow_down"
                                    app:tint="#E8F5E9"
                                    android:layout_marginEnd="4dp"
                                    android:contentDescription="Income Icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pemasukan"
                                    android:textColor="#E8F5E9"
                                    android:textSize="13sp"
                                    android:alpha="0.9"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvMasuk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 1.840.000"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-bold"
                                android:textSize="18sp"/>
                        </LinearLayout>

                        <!-- Expense (Right) -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="end">
                            
                             <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">
                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_arrow_up"
                                    app:tint="#FFEBEE"
                                    android:layout_marginEnd="4dp"
                                    android:contentDescription="Expense Icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pengeluaran"
                                    android:textColor="#FFEBEE"
                                    android:textSize="13sp"
                                    android:alpha="0.9"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvKeluar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 284.000"
                                android:textColor="#FFFFFF"
                                android:fontFamily="sans-serif-bold"
                                android:textSize="18sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- SCROLLABLE SECTION -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:paddingBottom="100dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <!-- Grafik Summary Section (BAR CHART) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="0dp"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_card_white_3d"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="24dp">
                            
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Overview"
                                android:fontFamily="sans-serif-bold"
                                android:textSize="18sp"
                                android:textColor="@color/text_primary"/>
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="This Month"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:background="@drawable/bg_filter_default"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"/>
                        </LinearLayout>

                        <!-- BAR CHART -->
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/barChartSummary"
                            android:layout_width="match_parent"
                            android:layout_height="220dp" />
                        
                        <!-- LEGEND CUSTOM -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center">
                            
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginEnd="16dp">
                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/bg_circle_green"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Income"
                                    android:textSize="12sp"
                                    android:layout_marginStart="8dp"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/bg_circle_red"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Expense"
                                    android:textSize="12sp"
                                    android:layout_marginStart="8dp"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- TABUNGAN SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Tabungan"
                    android:fontFamily="sans-serif-bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTabungan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="24dp"/>

                <Button
                    android:id="@+id/btnTambahTabungan"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ Tambah Target Baru"
                    android:textColor="@color/green_primary"
                    android:layout_marginBottom="24dp"/>
                
                <Button
                    android:id="@+id/btnReset"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset Semua Data"
                    android:textColor="#EF5350"
                    android:layout_marginTop="24dp"
                    android:visibility="gone"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_gravity="bottom"
        app:fabCradleMargin="20dp"
        app:fabCradleRoundedCornerRadius="40dp"
        app:fabCradleVerticalOffset="6dp"
        app:fabAlignmentMode="center"
        android:backgroundTint="#FFFFFF"
        app:elevation="20dp"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="5">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="#424242"
                    android:contentDescription="Home"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#424242"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Riwayat -->
            <LinearLayout
                android:id="@+id/navRiwayat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_history"
                    app:tint="#424242"
                    android:contentDescription="History"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riwayat"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#424242"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- EMPTY SPACE FOR FAB -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <!-- Laporan -->
            <LinearLayout
                android:id="@+id/navLaporan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_report"
                    app:tint="#424242"
                    android:contentDescription="Report"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laporan"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#424242"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/navSettings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    app:tint="#424242"
                    android:contentDescription="Settings"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#424242"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        app:tint="#FFFFFF"
        android:backgroundTint="@color/green_primary"
        app:layout_anchor="@id/bottomAppBar"
        app:maxImageSize="32dp"
        app:fabCustomSize="64dp"
        app:elevation="4dp"
        android:contentDescription="Add Transaction"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>