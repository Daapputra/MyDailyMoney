<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Kembali"
                android:padding="8dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tambah_transaksi"
                android:fontFamily="sans-serif-medium"
                android:textSize="22sp"
                android:textColor="@color/text_primary"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <!-- Card Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_white"
            android:elevation="4dp"
            android:padding="24dp">

            <!-- Label Nominal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nominal"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <!-- Input Nominal (Hero) -->
            <EditText
                android:id="@+id/etNominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Rp 0"
                android:inputType="numberDecimal"
                android:textColor="@color/text_primary"
                android:textColorHint="#BDC3C7"
                android:textSize="40sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:importantForAutofill="no"
                android:layout_marginBottom="24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginBottom="24dp"/>

            <!-- Tanggal Transaksi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:id="@+id/btnPickDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_input_field"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/green_primary"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hari Ini"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <!-- Jenis Transaksi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Transaksi"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgJenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:chipSpacingHorizontal="8dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMasuk"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemasukan"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipKeluar"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengeluaran"/>

            </com.google.android.material.chip.ChipGroup>

            <!-- KATEGORI ICON GRID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kategori"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvKategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>
            
            <!-- Hidden EditText to store category string for logic compatibility -->
            <EditText
                android:id="@+id/etKategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:inputType="text"/>

            <!-- CATATAN -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/catatan_opsional"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etCatatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:background="@drawable/bg_input_field"
                android:gravity="top|start"
                android:hint="Tulis detail transaksi..."
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:importantForAutofill="no"
                android:layout_marginBottom="24dp"/>

            <!-- Tombol Simpan -->
            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/simpan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/green_primary"
                app:cornerRadius="12dp"
                android:stateListAnimator="@null"
                android:elevation="0dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
